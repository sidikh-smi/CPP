NAME = sed
SRccS = main.cpp sed.cpp

cccc = c++
RM = rm -rf
FLAGS = -Wall -Wextra -Werror -std=c++98

all: $(NAME)

$(NAME): $(SRccS)
	$(cccc) $(FLAGS) $(SRccS) -o $(NAME)

fclean :
	$(RM) $(NAME)
re : fclean all
